<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.familyinstruction">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NoteMaterialActivity"
            android:label="@string/app_note_page_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".EditorActivity" />

        <provider
            android:name=".data.InstructionProvider"
            android:authorities="com.example.android.familyinstruction"
            android:exported="false" />

        <activity android:name=".MediaPlayBack" />
        <activity
            android:name=".EpisodeActivity"
            android:label="家训视频" />
        <activity
            android:name=".BookShelfActivity"
            android:label="家训书籍" />
        <activity
            android:name=".CatalogActivity"
            android:label="家训书籍" />
        <activity android:name=".ContentActivity" />
        <activity
            android:name=".MediaListActivity"
            android:label="家训视频" />
        <activity android:name=".WriterInfoActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity" />
        <activity android:name=".ReviewActivity" />
        <activity android:name=".UserBookShelfActivity"></activity>
    </application>

</manifest>